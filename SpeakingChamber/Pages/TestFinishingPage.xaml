<local:BasePage x:Class="SpeakingChamber.Pages.TestFinishingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpeakingChamber.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TestFinishingPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Congratulations! You have completed the exam!"/>
        <TextBlock Grid.Row="2" Text="{Binding UserName,StringFormat=Name: {0}}"/>
        <StackPanel Grid.Row="4">
            <TextBlock Text="{Binding ExamCode,StringFormat=EXAM CODE: {0}}"/>
            <TextBlock Text="{Binding ExamDate,StringFormat=Date: {0}}"/>
        </StackPanel>
        <Button Grid.Row="6" Content="OK" Command="{Binding CmdOK}"/>
    </Grid>
</local:BasePage>
