<local:BasePage 
    x:Class="SpeakingChamber.Pages.MicCheckingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:SpeakingChamber.Pages"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    Title="MicCheckingPage">

    <StackPanel>
        <TextBlock Text="PLease check your microphone"/>
        <TextBlock Text="First, please say something to the microphone, then click 'Complete' button"/>
        <ListBox ItemsSource="{Binding InputSources}" Visibility="{Binding VisibleInputSource}" SelectedItem="{Binding SelectedInput,Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ProductName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Complete" Command="{Binding CmdComplete}" IsEnabled="{Binding EnableComplete}"/>
        <StackPanel Visibility="{Binding VisibleConfirm}">
            <TextBlock Text="Now, we are playing back your voice... Could you hear that"/>
            <Button Content="Yes, proceed to Testing" Command="{Binding CmdYes}" />
            <Button Content="No" Command="{Binding CmdNo}"/>
        </StackPanel>
    </StackPanel>
</local:BasePage>

