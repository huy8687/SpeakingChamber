<local:BasePage x:Class="SpeakingChamber.Pages.SettingPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpeakingChamber.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SettingPasswordPage">

    <StackPanel HorizontalAlignment="Center">
        <Image Width="275" Source="/SpeakingChamber;component/Resources/logo.png" Stretch="UniformToFill"/>
        <TextBlock Text="Speaking Chamber" FontSize="30" HorizontalAlignment="Center"/>
        <TextBlock Text="Settings" FontSize="30" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Enter password:"/>
            <TextBox Text="{Binding Password,Mode=OneWayToSource}" Width="150"/>
            <Button Content="OK" Command="{Binding CmdOK}"/>
        </StackPanel>
    </StackPanel>
</local:BasePage>
